extends ../layout
block content
    h1 Books
    |     
    p
      a.button(href='/books/new_book') Create New Book
    |     
    form(method="post" action="/books/all_books")
      input.search(type="submit" value="Search")
      input.search(type="text" name="search" placeholder="Search Title, Author, Genre..") 
    |
    p
      | Filters 
      a(href='/books/all_books') All
      |  | 
      a(href='/books/overdue_books') Overdue
      |  | 
      a(href='/books/checked_books') Checked Out
    |
    table
      thead
        tr
          th Title
          |                 
          th Author
          |                 
          th Genre
          |                 
          th Year Released
      |         
      tbody
        each book in books
          tr
            td
              a(href='/books/book_detail/'+book.id)= book.title
            |                 
            td= book.author
            |                 
            td= book.genre
            |                 
            td= book.first_published
    include ../_paginate
