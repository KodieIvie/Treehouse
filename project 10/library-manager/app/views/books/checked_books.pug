extends ../layout
block content
    h1 Checked Out Books
    |     
    p
      a.button(href='/books/new_book') Create New Book
    |     
    p
      | Filters 
      a(href='/books/all_books') All
      |  | 
      a(href='/books/overdue_books') Overdue
      |  | 
      a(href='/books/checked_books') Checked Out
    |     
    table
      thead
        tr
          th Title
          |                 
          th Author
          |                 
          th Genre
          |                 
          th Year Released
      |         
      tbody
        each loan in books
          if !loan.returned_on || loan.returned_on < loan.loaned_on
            tr
              td
                a(href='/books/book_detail/'+loan.book_id)= loan.Book.title
              |                 
              td= loan.Book.author
              |                 
              td= loan.Book.genre
              |                 
              td= loan.Book.first_published
            |