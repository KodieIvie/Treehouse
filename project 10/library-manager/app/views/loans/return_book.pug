extends ../layout
block content
    h1 Patron: Return Book
    |     
    p
      strong Book Title: 
      span= loan.Book.title
    |     
    p
      strong Loaned By: 
      span= loan.Patron.first_name+' '+loan.Patron.last_name
    |     
    p
      strong Loaned On: 
      span= loan.loaned_on
    |     
    p
      strong Return By: 
      span= loan.return_by
    |     
    form(method="post")
      p
        label(for='returned_on') Returned on:
        input#returned_on(type='text' name="returned_on" value= dateNow )
        input(type='hidden' name="loaned_on" value= loan.loaned_on )
      |         
      p
        input(type='submit', value='Return Book')
